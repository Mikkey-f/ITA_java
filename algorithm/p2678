https://www.luogu.com.cn/problem/P2678

#include<bits/stdc++.h> 
using namespace std;
int l,n,m,ans,a[50005];
bool ss(int y){
	int k=0;
	int b=0;//下一块石头 
	int now=0;//当前石头 
	while(now<=n){
		b++;
		if(a[b]-a[now]<y){//当前石头和下一个石头之间的距离如果小于y，搬走石头 
		    k++; 
			
		}
		else{//两个石头的距离大于最小跳过距离，则跳过 
			now=b; 
		} 
	}
	if(k>m)return false
	return true;
}
int main(){
	cin>>l>>n>>m;
	cout<<l;
	for(int i=1;i<=n;i++){
		cin>>a[i];
	}
	int i,r;
	while(i<r){
		int mid = (i+r)/2;
		if(ss(mid)){
			ans=mid;
			i = mid+1;
		}else{
			r=mid-1;
		}
	} 
	cout<<ans;
	return 0;
} 
