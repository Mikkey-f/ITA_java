https://www.luogu.com.cn/problem/P1094

#include<bits/stdc++.h> 
using namespace std;
int w,n,ans,a[30005];
int main(){
	cin>>w>>n;
	for(int i=1;i<=n;i++)cin>>a[i];
	sort(a+1,a+n+1);
	int i=1,j=n;
	while(i<=j){
	   if(a[i]+a[j]>w){
	   	j--;
	   	ans++;
	   } 
	   if(a[i]+a[j]<=w){
	   	i++;
	   	j--;
	   	ans++;
	   }                                                                                                                                                                                                                          
	}
	cout<<ans;
	return 0;
}
