https://www.luogu.com.cn/problem/P1478

#include<bits/stdc++.h> 
using namespace std;
int n,s;
struct ss{
	int x;
	int y;
}t[5010];
bool cmp(ss a,ss b){
	return a.y<b.y;
}//让苹果以摘取所消耗的力气从小到大排序
int main(){
	cin>>n>>s;
	int a,b;
	cin>>a>>b;
	for(int i=0;i<n;i++){
	cin>>t[i].x>>t[i].y;
}
	sort(t,t+n,cmp);//因为需要使得摘取的苹果最多，所以从消耗最小的苹果开始摘
	int sum=0;//记录摘掉的苹果数
	for(int i=0;i<n;i++){
		if(s>=t[i].y&&(a+b)>=t[i].x){
			s-=t[i].y;
			sum++;
		}能摘掉苹果需要两个条件：一是高度够得着，二是力气足够
		if(s<0)break;//没力气了，直接退出循环
	}
	cout<<sum;
	return 0;
}
